# AI Configuration
# Set to 'openai', 'deepseek', or 'mock' for development/testing
AI_VENDOR=deepseek

# OpenAI Configuration (when AI_VENDOR=openai)
OPENAI_API_KEY=your-openai-api-key-here
# OpenAI model to use (e.g., gpt-4o-mini, gpt-4, gpt-3.5-turbo)

# DeepSeek Configuration (when AI_VENDOR=deepseek)
DEEPSEEK_API_KEY=your-deepseek-api-key-here
# DeepSeek model to use (e.g., deepseek-chat, deepseek-coder)
AI_MODEL=deepseek-chat

# Legacy setting for mock responses
MOCK_MODE=false

# Persistence Configuration  
# Set to 'true' to persist data via APIs, 'false' for mock mode
NEXT_PUBLIC_PERSIST_TO_API=false

# App Configuration  
UPLOAD_MAX_MB=5
MAX_TOKENS=512

# Development
NODE_ENV=development

# When running in development, set NEXT_PUBLIC_SHOW_DEBUG=true to enable the on-page debug panel
# Default is 'false' (do not show). Only set this in trusted dev environments.
NEXT_PUBLIC_SHOW_DEBUG=false

# Database (SQLite local default)
# IMPORTANT: Use prisma/dev.db so both Prisma CLI and runtime agree on path
DATABASE_URL="file:./prisma/dev.db"
# Optionally override provider (postgresql for prod)
# PRISMA_PROVIDER=postgresql
# Example Postgres URL:
# DATABASE_URL="postgresql://user:password@host:5432/dbname?sslmode=require"

# Supabase (Auth)
# Required: project URL and anon public key for browser/SSR client
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Optional: service role key for server-side token verification (DO NOT expose to client)
# Used by API routes to validate Authorization: Bearer <access_token>
SUPABASE_SERVICE_ROLE_KEY=

# Security
# Generate with: openssl rand -base64 32
JWT_SECRET=

# Optional: comma-separated API keys for service-to-service calls
API_KEYS=

# CORS allowed origins (comma-separated, only used if configured)
ALLOWED_ORIGINS=

# Feature Flags (client-visible flags must be prefixed with NEXT_PUBLIC_)
NEXT_PUBLIC_FEATURE_ENHANCED_UI=false
NEXT_PUBLIC_FEATURE_SESSION_RECOVERY=true
NEXT_PUBLIC_FEATURE_STRICT_TIMERS=true
NEXT_PUBLIC_FEATURE_MOCK_AI=false

# Server-side feature flags
FEATURE_RATE_LIMITING=true
FEATURE_CSP_REPORTS=false
